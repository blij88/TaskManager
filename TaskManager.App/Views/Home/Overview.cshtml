@model TaskManager.App.ViewModels.OverviewViewModel

@{
    ViewBag.Title = "Overview";
}

<h2>Overview</h2>

<p>
    @Html.ActionLink("Create new task", "Create")
</p>
<p>
    @Html.ActionLink("Add new contact", "CreateContact")
</p>
<div>
    @foreach (var item in Model.Late)
    {
    <Label class="alert-danger" style="width:45%">@($"{item.Name}: {item.StartDate.ToString("d")} - {item.EndDate.ToString("d")}")</Label>
    }
</div>
<div style="float:left; border-right:solid">
    <table class="table" style="float:left">
        <tr>
            <th>TO DO</th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.ToDo)
        {
            if (item.Progress == TaskManager.Data.Progress.ToDo)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td> 
                    
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id}) |
                        @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>
                </tr>

            }
        }
    </table>
</div>
<div style="float:left; border-right-style:solid">
    <table class="table" style="float:left">
        <tr>
            <th>In Progress</th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.Doing)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
        }
    </table>
</div>

<div style="float:left; border-right-style:solid">
    <table class="table" style="float:left">
        <tr>
            <th>In Progress</th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.Done)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>

<div style="float:left; border-right-style:solid">
    <table class="table" style="float:left">
        <tr>
            <th>People who can help</th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacts)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.Contacts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactInfo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditContact", new { id = item.Id }) |
                    @Html.ActionLink("Details", "DetailsContact", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteContact", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>